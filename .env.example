# Example environment variables for Netlify deployment
# Copy this to .env.production and update with your actual values

# Build optimizations (DO NOT CHANGE)
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0
CI=false

# API Configuration (REQUIRED - Update with your backend URL)
REACT_APP_API_URL=https://your-backend-url.herokuapp.com

# Node Environment (DO NOT CHANGE)
NODE_ENV=production

## Local development placeholders (copy to .env for local runs)
JWT_SECRET=replace-with-local-jwt-secret
ADMIN_PASSWORD=replace-with-local-admin-password
FRONTEND_URL=http://localhost:3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce_db
